@using MudBlazor



<MudPaper Class="pa-4" Elevation="1">
    <MudText Typo="Typo.h6" Class="mb-2">Invoices</MudText>
    <MudTable Items="@invoices">
        <HeaderContent>
            <MudTh>Invoice Date</MudTh>
            <MudTh>Payment Date</MudTh>
            <MudTh>Invoice Amount</MudTh>
            <MudTh>Plan Name</MudTh>
            <MudTh>Billing Cycle</MudTh>
            <MudTh>*</MudTh>
            <MudTh>*</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.InvoiceDate</MudTd>
            <MudTd>@context.PaymentDate</MudTd>
            <MudTd>@context.InvoiceAmount</MudTd>
            <MudTd>@context.PlanName</MudTd>
            <MudTd>@context.BillingCycle</MudTd>
            <MudTd>
                <MudLink Href="#" Color="Color.Primary">View details</MudLink>
                <MudButton StartIcon="@Icons.Material.Outlined.Download"></MudButton>
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudPaper>



